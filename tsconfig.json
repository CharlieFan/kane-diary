{
    "compilerOptions": {
        "target": "es5",
        "jsx": "react",
        "outDir": "./dist/",
        "baseUrl": "./src",
        "rootDirs": [
            "./src"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "removeComments": true,
        "allowJs": true,
        "alwaysStrict": true,
        "typeRoots": [
            "node_modules/@types",
            "typings"
        ],
        "lib": [
            "es2015",
            "dom"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "typings/**/*.ts"
    ],
    "exclude": [
        "./dist",
        "./static"
    ]
}